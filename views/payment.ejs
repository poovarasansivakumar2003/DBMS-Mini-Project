<%- include('includes/header') %>
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-white flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-5 bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
    <h2 class="text-2xl font-bold text-center text-gray-800">Payment for Medicine</h2>
    <form action="/customer/customerDashboard/cart/pay" method="POST">
        <input type="hidden" id="customerId" name="customer_id" value="<%= customerId %>">
        
      <div class="form-group">
        <label for="totalAmount">Total Amount:</label>
        <input type="number" id="totalAmount" name="totalAmount" required>
      </div>
      <div class="form-group">
        <label for="paymentMethod">Payment Method:</label>
        <select id="paymentMethod" name="paymentMethod" class="form-control" required>
          <option value="creditCard">Credit Card</option>
          <option value="debitCard">Debit Card</option>
          <option value="cash">Cash</option>
          <option value="upi">UPI</option>
        </select>
      </div>
      <button type="submit" name="action" value="payment" class="bg-blue-600 text-white px-4 py-2 rounded-md mt-4 hover:bg-blue-800">Make Payment</button>
    </form>
  </div>
</div>
<%- include('includes/footer') %>