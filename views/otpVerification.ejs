<%- include('includes/header') %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-white flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-5 bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
        <h2 class="text-2xl font-bold text-center text-gray-800">Verify OTP</h2>
        <p class="text-sm text-center text-gray-600 mb-6">Enter the OTP sent to your email/phone</p>

        <% if (error) { %>
            <div class="mb-4 text-red-600 text-sm"><%= error %></div>
        <% } %>

        <form action="/otpVerification" method="POST">
            <input type="hidden" name="contact" value="<%= contact %>">
            <label class="block text-sm font-medium text-gray-700 mb-1">Enter OTP</label>
            <input type="text" name="otp" required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 mb-4" 
                placeholder="Enter OTP">

            <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                Verify OTP
            </button>
        </form>
    </div>
</div>

<%- include('includes/footer') %>
