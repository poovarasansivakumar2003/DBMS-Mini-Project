<%- include('includes/header') %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-white flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-5 bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
    <h2 class="text-2xl font-bold text-center text-gray-800">Reset Password</h2>
    <p class="text-sm text-center text-gray-600 mb-6">Enter your email/phone to receive an OTP</p>

    <% if (error) { %>
    <div class="mb-4 text-red-600 text-sm"><%= error %></div>
    <% } %>

    <form action="/forgotPassword" method="POST">
      <label class="block text-sm font-medium text-gray-700">Email / Phone Number</label>
      <input type="text" name="contact" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 mb-4" placeholder="Enter your email or phone">

      <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
        Send OTP
      </button>
    </form>
  </div>
</div>

<%- include('includes/footer') %>