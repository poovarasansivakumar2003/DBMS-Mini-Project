<%- include('includes/header') %>
<div class="bg-gradient-to-br from-blue-50 to-white flex justify-center items-center h-screen bg-gray-100">
  <h1 class="text-2xl font-bold">Welcome, <%= customer.customer_name %>!</h1>
  
  <div class="mt-4 bg-white p-6 shadow-md rounded-lg w-3/4">
    <h2 class="text-xl font-semibold">Your Profile</h2>
    <p><strong>Email:</strong> <%= customer.customer_email %></p>
    <p><strong>Phone:</strong> <%= customer.customer_ph_no %></p>
    <p><strong>Address:</strong> <%= customer.customer_address %></p>
    <p><strong>Balance Amount:</strong> $<%= customer.customer_balance_amt %></p>
  </div>
  
  <form action="/customer/update" method="POST" enctype="multipart/form-data" class="mt-4 space-y-2">
    <input type="hidden" name="customer_id" value="<%= customer.customer_id %>">

    <div class="mb-2">
      <label for="customer_name_<%= customer.customer_id %>" class="block text-sm font-medium text-gray-700">Name</label>
      <input type="text" id="customer_name_<%= customer.customer_id %>" name="customer_name" value="<%= customer.customer_name %>" required class="mt-1 w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
    </div>

    <div class="mb-2">
      <label for="customer_email_<%= customer.customer_id %>" class="block text-sm font-medium text-gray-700">Email</label>
      <input type="email" id="customer_email_<%= customer.customer_id %>" name="customer_email" value="<%= customer.customer_email %>" required class="mt-1 w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
    </div>

    <div class="mb-2">
      <label for="customer_ph_no_<%= customer.customer_id %>" class="block text-sm font-medium text-gray-700">Phone Number</label>
      <input type="text" id="customer_ph_no_<%= customer.customer_id %>" name="customer_ph_no" value="<%= customer.customer_ph_no %>" required class="mt-1 w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
    </div>

    <div class="mb-2">
      <label for="customer_address_<%= customer.customer_id %>" class="block text-sm font-medium text-gray-700">Address</label>
      <input type="text" id="customer_address_<%= customer.customer_id %>" name="customer_address" value="<%= customer.customer_address %>" class="mt-1 w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
    </div>

    <div class="mb-2">
      <label for="customer_feedback_<%= customer.customer_id %>" class="block text-sm font-medium text-gray-700">Feedback</label>
      <input type="text" id="customer_feedback_<%= customer.customer_id %>" name="customer_feedback" value="<%= customer.customer_feedback %>" class="mt-1 w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
    </div>

    <div class="mb-2">
      <label for="customer_balance_amt_<%= customer.customer_id %>" class="block text-sm font-medium text-gray-700">Balance Amount</label>
      <p><%= customer.customer_balance_amt %></p>
    </div>

    <div class="mb-2">
      <label for="customer_photo_<%= customer.customer_id %>" class="block text-sm font-medium text-gray-700">Upload New Photo</label>
      <input type="file" id="customer_photo_<%= customer.customer_id %>" name="customer_photo" accept="image/*" class="mt-1 w-full">
    </div>

    <button type="submit" name="action" value="edit" class="w-full bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700">Save
      Changes</button>
  </form>


  <!-- Purchase Medicines -->
  <div class="mt-6 bg-white p-6 shadow-md rounded-lg w-3/4">
    <h2 class="text-xl font-semibold">Purchase Medicines</h2>
    <form action="/customer/purchase" method="POST">
      <label>Select Medicine:</label>
      <select name="medicineId" class="border rounded p-2">
          <% medicines.forEach(medicine => { %>
              <option value="<%= medicine.medicine_id %>"><%= medicine.medicine_name %> - $<%= medicine.medicine_price %></option>
          <% }); %>
      </select>
      <label>Quantity:</label>
      <input type="number" name="quantity" min="1" required class="border rounded p-2">
      <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 mt-2">Purchase</button>
    </form>
  </div>

  <!-- Purchase History -->
  <div class="mt-6 bg-white p-6 shadow-md rounded-lg w-3/4">
    <h2 class="text-xl font-semibold">Purchase History</h2>
    <% if (purchases.length > 0) { %>
      <table class="table-auto w-full border-collapse border border-gray-300 mt-2">
        <thead>
          <tr class="bg-gray-200">
            <th class="border px-4 py-2">Purchase ID</th>
            <th class="border px-4 py-2">Medicine</th>
            <th class="border px-4 py-2">Supplier</th>
            <th class="border px-4 py-2">Quantity</th>
            <th class="border px-4 py-2">Admin</th>
            <th class="border px-4 py-2">Total Amount</th>
            <th class="border px-4 py-2">Payment Date</th>
            <th class="border px-4 py-2">Payment Status</th>
          </tr>
        </thead>
        <tbody>
          <% purchases.forEach(purchase => { %>
            <tr>
              <td class="border px-4 py-2"><%= purchase.purchase_id %></td>
              <td class="border px-4 py-2"><%= purchase.medicine_name %></td>
              <td class="border px-4 py-2"><%= purchase.supplier_name %></td>
              <td class="border px-4 py-2"><%= purchase.purchased_quantity %></td>
              <td class="border px-4 py-2"><%= purchase.admin_username %></td>
              <td class="border px-4 py-2">$<%= purchase.total_amt %></td>
              <td class="border px-4 py-2"><%= new Date(purchase.purchase_date).toLocaleDateString() %></td>
              <td class="border px-4 py-2">
                <% if (purchase.supplier_name === "undefined") { %>
                  <span class="text-red-500 font-semibold">Pending</span>
                <% } else { %>
                  <span class="text-green-500 font-semibold">Completed</span>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p class="text-gray-600">No purchases found.</p>
    <% } %>
  </div>
</div>
</div>


<%- include('includes/footer') %>