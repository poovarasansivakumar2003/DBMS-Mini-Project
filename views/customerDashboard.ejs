<%- include('includes/header') %>
<div class="bg-gradient-to-br from-blue-50 to-white flex flex-col items-center min-h-screen p-4">
  <h1 class="text-2xl font-bold text-center">Welcome, <%= customer.customer_name %>!</h1>
  
  <div class="mt-4 bg-white p-6 shadow-md rounded-lg w-full max-w-2xl">
    <h2 class="text-xl font-semibold">Your Profile</h2>
    <img src="/customer/photo/<%= customer.customer_photo ? encodeURIComponent(customer.customer_photo.split('/').pop()) : 'default_photo.jpg' %>" alt="<%= customer.customer_name %>" class="w-30 h-30 rounded-full">
    <p><strong>Email:</strong> <%= customer.customer_email %></p>
    <p><strong>Phone:</strong> <%= customer.customer_ph_no %></p>
    <p><strong>Address:</strong> <%= customer.customer_address %></p>
    <p><strong>Balance Amount:</strong> $<%= customer.customer_balance_amt %></p>
  </div>

  <form action="/customer/update" method="POST" enctype="multipart/form-data" class="mt-4 w-full max-w-2xl">
    <input type="hidden" name="customer_id" value="<%= customer.customer_id %>">
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700">Name</label>
        <input type="text" name="customer_name" value="<%= customer.customer_name %>" required class="w-full p-2 border rounded">
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700">Email</label>
        <input type="email" name="customer_email" value="<%= customer.customer_email %>" required class="w-full p-2 border rounded">
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700">Phone Number</label>
        <input type="text" name="customer_ph_no" value="<%= customer.customer_ph_no %>" required class="w-full p-2 border rounded">
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700">Address</label>
        <input type="text" name="customer_address" value="<%= customer.customer_address %>" class="w-full p-2 border rounded">
      </div>
    </div>
    
    <div class="mt-4">
      <label class="block text-sm font-medium text-gray-700">Feedback</label>
      <input type="text" name="customer_feedback" value="<%= customer.customer_feedback %>" class="w-full p-2 border rounded">
    </div>
    
    <div class="mt-4">
      <label class="block text-sm font-medium text-gray-700">Upload New Photo</label>
      <input type="file" name="customer_photo" accept="image/*" class="w-full p-2 border rounded">
    </div>
    
    <button type="submit" class="w-full mt-4 bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700">Save Changes</button>
  </form>

  <div class="mt-6 bg-white p-6 shadow-md rounded-lg w-full max-w-2xl">
    <h2 class="text-xl font-semibold">Purchase Medicines</h2>
    <form action="/customer/purchase" method="POST" class="flex flex-col md:flex-row gap-2">
      <select name="medicineId" class="border rounded p-2 w-full md:w-auto">
        <% medicines.forEach(medicine => { %>
          <option value="<%= medicine.medicine_id %>"><%= medicine.medicine_name %> - $<%= medicine.medicine_price %></option>
        <% }); %>
      </select>
      <input type="number" name="quantity" min="1" required class="border rounded p-2 w-full md:w-auto">
      <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700">Purchase</button>
    </form>
  </div>
  
  <div class="mt-6 bg-white p-6 shadow-md rounded-lg w-full max-w-2xl">
    <h2 class="text-xl font-semibold">Purchase History</h2>
    <% if (invoice.length > 0) { %>
      <div class="overflow-x-auto">
        <table class="table-auto w-full border-collapse border border-gray-300 mt-2">
          <thead>
            <tr class="bg-gray-200">
              <th class="border px-4 py-2">Invoice No</th>
              <th class="border px-4 py-2">Invoice Date</th>
              <th class="border px-4 py-2">Medicine</th>
              <th class="border px-4 py-2">Composition</th>
              <th class="border px-4 py-2">Supplier</th>
              <th class="border px-4 py-2">Expiry Date</th>
              <th class="border px-4 py-2">Price</th>
              <th class="border px-4 py-2">Quantity</th>
              <th class="border px-4 py-2">Total Amount</th>
              <th class="border px-4 py-2">Customer Balance</th>
              <th class="border px-4 py-2">Total To Pay</th>
              <th class="border px-4 py-2">Discount</th>
              <th class="border px-4 py-2">Net Total</th>
              <th class="border px-4 py-2">Balance</th>
              <th class="border px-4 py-2">Payment Status</th>
            </tr>
          </thead>
          <tbody>
            <% invoice.forEach(record => { %>
              <tr>
                <td class="border px-4 py-2"><%= record.invoice_no %></td>
                <td class="border px-4 py-2"><%= new Date(record.invoice_date).toLocaleDateString() %></td>
                <td class="border px-4 py-2"><%= record.medicine_name %></td>
                <td class="border px-4 py-2"><%= record.medicine_composition %></td>
                <td class="border px-4 py-2"><%= record.supplier_name %></td>
                <td class="border px-4 py-2"><%= new Date(record.medicine_expiry_date).toLocaleDateString() %></td>
                <td class="border px-4 py-2">$<%= record.medicine_price %></td>
                <td class="border px-4 py-2"><%= record.purchased_quantity %></td>
                <td class="border px-4 py-2">$<%= record.total_amt %></td>
                <td class="border px-4 py-2">$<%= record.customer_balance_amt %></td>
                <td class="border px-4 py-2">$<%= record.total_amt_to_pay %></td>
                <td class="border px-4 py-2">$<%= record.discount %></td>
                <td class="border px-4 py-2">$<%= record.net_total %></td>
                <td class="border px-4 py-2">$<%= record.balance %></td>
                <td class="border px-4 py-2">
                  <% if (record.balance > 0) { %>
                    <span class="text-red-500 font-semibold">Pending</span>
                  <% } else { %>
                    <span class="text-green-500 font-semibold">Paid</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-gray-600">No purchases found.</p>
    <% } %>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();

    socket.on('orderApproved', (data) => {
        alert(`Your order (Purchase ID: ${data.purchaseId}) has been approved! Total Payable: ${data.net_total}, Balance: ${data.balance}`);
        location.reload(); // Refresh to show updated balance
    });
</script>

<%- include('includes/footer') %>