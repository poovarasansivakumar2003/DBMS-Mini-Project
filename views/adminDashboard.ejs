<%- include('includes/header') %>

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-semibold text-gray-700 text-center mb-6">Admin Panel</h1>

    <!-- Available Medicines -->
    <h1 class="text-3xl font-semibold text-gray-700 text-center mb-6">Available Medicines</h1>
    <% if (medicines.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% medicines.forEach(medicine => { %>
                <div class="border rounded-lg shadow-md p-4 bg-white hover:shadow-lg transition">
                    <img src="<%= medicine.medicine_img %>" alt="<%= medicine.medicine_name %>" class="w-full h-40 object-cover rounded-md mb-3">
                    <h2 class="text-lg font-semibold text-gray-800"><%= medicine.medicine_name %></h2>
                    <p class="text-gray-600 text-sm"><%= medicine.medicine_composition %></p>
                    <p class="text-blue-600 font-bold text-lg mt-2">&#8377;<%= medicine.medicine_price %></p>
                    <p class="text-red-500 text-sm">Expiry: <%= new Date(medicine.medicine_expiry_date).toDateString() %></p>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p class="text-center text-gray-600">No medicines found.</p>
    <% } %>

    <!-- Manage Medicines -->
    <h2 class="text-2xl font-semibold text-gray-600 mt-6">Manage Medicines</h2>
    
    <!-- Add Medicine Form -->
    <form action="/admin/addMedicine" method="POST" enctype="multipart/form-data" class="mt-4 space-y-2">
        <input type="text" name="medicine_name" placeholder="Medicine Name" required>
        <input type="text" name="medicine_composition" placeholder="Composition" required>
        <input type="number" name="medicine_price" placeholder="Price" required>
        <input type="date" name="medicine_expiry_date" required>
        <input type="file" name="medicine_img" accept="image/*">
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Add Medicine</button>
    </form>

    <!-- Delete Medicine Form -->
    <% if (medicines.length > 0) { %>
        <h2 class="text-2xl font-semibold text-gray-600 mt-6">Delete Medicines</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% medicines.forEach(medicine => { %>
                <form action="/admin/deleteMedicine" method="POST" class="border rounded-lg shadow-md p-4 bg-white hover:shadow-lg transition">
                    <img src="<%= medicine.medicine_img %>" alt="<%= medicine.medicine_name %>" class="w-full h-40 object-cover rounded-md mb-3">
                    <h2 class="text-lg font-semibold text-gray-800"><%= medicine.medicine_name %></h2>
                    <p class="text-gray-600 text-sm"><%= medicine.medicine_composition %></p>
                    <p class="text-blue-600 font-bold text-lg mt-2">&#8377;<%= medicine.medicine_price %></p>
                    <p class="text-red-500 text-sm">Expiry: <%= new Date(medicine.medicine_expiry_date).toDateString() %></p>
                    <input type="hidden" name="medicine_id" value="<%= medicine.medicine_id %>">
                    <button type="submit" class="mt-3 w-full bg-red-600 text-white py-2 rounded-lg hover:bg-red-700" onclick="return confirm('Are you sure you want to delete this medicine?')">
                        Delete
                    </button>
                </form>
            <% }) %>
        </div>
    <% } %>

    <!-- Customers Section -->
    <h2 class="text-xl font-semibold text-gray-700 mt-6">Customers</h2>
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden mt-4">
        <thead>
            <tr class="bg-gray-200 text-gray-700">
                <th class="p-2">ID</th>
                <th class="p-2">Name</th>
                <th class="p-2">Email</th>
                <th class="p-2">Phone</th>
                <th class="p-2">Address</th>
                <th class="p-2">Feedback</th>
                <th class="p-2">Balance</th>
            </tr>
        </thead>
        <tbody>
            <% if (customers && customers.length > 0) { %>
                <% customers.forEach((customer) => { %>
                    <tr class="border-t">
                        <td class="p-2"><%= customer.customer_id || 'N/A' %></td>
                        <td class="p-2"><%= customer.customer_name || 'N/A' %></td>
                        <td class="p-2"><%= customer.customer_email || 'N/A' %></td>
                        <td class="p-2"><%= customer.customer_ph_no || 'N/A' %></td>
                        <td class="p-2"><%= customer.customer_address || 'N/A' %></td>
                        <td class="p-2"><%= customer.customer_feedback || 'N/A' %></td>
                        <td class="p-2">&#8377;<%= customer.customer_balance_amt || 'N/A' %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="7" class="text-center text-gray-500">No customers found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('includes/footer') %>
