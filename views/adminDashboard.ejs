<%- include('includes/header') %>

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-semibold text-gray-700 text-center mb-6">Admin Panel</h1>

    <h2 class="text-2xl font-semibold text-gray-600">Manage Medicines</h2>

    <!-- Add Medicine Form -->
    <form action="/admin/addMedicine" method="POST" enctype="multipart/form-data" class="mt-4">
        <input type="text" name="medicine_name" placeholder="Medicine Name" required>
        <input type="text" name="medicine_composition" placeholder="Composition" required>
        <input type="number" name="medicine_price" placeholder="Price" required>
        <input type="date" name="medicine_expiry_date" required>
        <input type="file" name="medicine_img_url" accept="image/*">
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg">Add Medicine</button>
    </form>

    <h2 class="text-xl font-semibold text-gray-700">Customers</h2>

    <% if (customers && customers.length > 0) { %>
        <% customers.forEach((customer) => { %>
            <tr class="border-t">
                <td class="p-2"><%= customer.customer_id || 'N/A' %></td>
                <td class="p-2"><%= customer.customer_name || 'N/A' %></td>
                <td class="p-2"><%= customer.customer_email || 'N/A' %></td>
                <td class="p-2"><%= customer.customer_ph_no || 'N/A' %></td>
            </tr>
        <% }) %>
    <% } else { %>
        <tr>
            <td colspan="4" class="text-center text-gray-500">No customers found.</td>
        </tr>
    <% } %>    

</div>

<%- include('includes/footer') %>
