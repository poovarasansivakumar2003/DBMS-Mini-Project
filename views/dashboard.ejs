<%- include('includes/header') %>

<main class="min-h-screen bg-gradient-to-b from-gray-50 to-white space-y-8">
    <!-- Hero Section -->
    <div class="relative overflow-hidden bg-white">
        <div class="max-w-7xl mx-auto">
            <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:w-full lg:pb-28 xl:pb-32">
                <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                    <div class="text-center">
                        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                            <span class="block">Pharmacy Management</span>
                            <span class="block text-blue-600">System</span>
                        </h1>
                        <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl">
                            Your Complete Healthcare Solution
                        </p>
                    </div>
                </main>
            </div>
        </div>
    </div>

    <!-- Dashboard Section -->
    <div class="container mx-auto p-6">
        <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">
            Dashboard Overview
        </h2>
        
        <!-- Stats Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
            <!-- Admin Card -->
            <div class="transform hover:scale-105 transition-transform duration-300">
                <div class="relative bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl shadow-lg overflow-hidden">
                    <div class="absolute top-0 right-0 -mt-3 -mr-3 bg-blue-400 rounded-full p-2">
                        <i class="fas fa-user-shield text-white text-xl"></i>
                    </div>
                    <div class="px-4 py-5 sm:p-6">
                        <h3 class="text-lg font-semibold text-white">Admins</h3>
                        <div class="mt-1 flex items-baseline justify-between">
                            <p class="text-4xl font-bold text-white"><%= admins %></p>
                            <p class="text-sm font-medium text-blue-100">Active</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Customers Card -->
            <div class="transform hover:scale-105 transition-transform duration-300">
                <div class="relative bg-gradient-to-r from-green-500 to-green-600 rounded-xl shadow-lg overflow-hidden">
                    <div class="absolute top-0 right-0 -mt-3 -mr-3 bg-green-400 rounded-full p-2">
                        <i class="fas fa-users text-white text-xl"></i>
                    </div>
                    <div class="px-4 py-5 sm:p-6">
                        <h3 class="text-lg font-semibold text-white">Customers</h3>
                        <div class="mt-1 flex items-baseline justify-between">
                            <p class="text-4xl font-bold text-white"><%= customers %></p>
                            <p class="text-sm font-medium text-green-100">Registered</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Medicines Card -->
            <div class="transform hover:scale-105 transition-transform duration-300">
                <div class="relative bg-gradient-to-r from-yellow-500 to-yellow-600 rounded-xl shadow-lg overflow-hidden">
                    <div class="absolute top-0 right-0 -mt-3 -mr-3 bg-yellow-400 rounded-full p-2">
                        <i class="fas fa-pills text-white text-xl"></i>
                    </div>
                    <div class="px-4 py-5 sm:p-6">
                        <h3 class="text-lg font-semibold text-white">Medicines</h3>
                        <div class="mt-1 flex items-baseline justify-between">
                            <p class="text-4xl font-bold text-white"><%= medicines %></p>
                            <p class="text-sm font-medium text-yellow-100">In Stock</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Suppliers Card -->
            <div class="transform hover:scale-105 transition-transform duration-300">
                <div class="relative bg-gradient-to-r from-red-500 to-red-600 rounded-xl shadow-lg overflow-hidden">
                    <div class="absolute top-0 right-0 -mt-3 -mr-3 bg-red-400 rounded-full p-2">
                        <i class="fas fa-truck text-white text-xl"></i>
                    </div>
                    <div class="px-4 py-5 sm:p-6">
                        <h3 class="text-lg font-semibold text-white">Suppliers</h3>
                        <div class="mt-1 flex items-baseline justify-between">
                            <p class="text-4xl font-bold text-white"><%= suppliers %></p>
                            <p class="text-sm font-medium text-red-100">Active</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Feedback Section -->
        <div class="max-w-5xl mx-auto mb-12">
            <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">
                What Our Customers Say
            </h2>
            <div class="grid gap-6 md:grid-cols-2">
                <% feedback.forEach(fb => { %>
                    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
                        <div class="p-6">
                            <div class="flex items-center mb-4">
                                <div class="bg-blue-100 rounded-full p-3">
                                    <i class="fas fa-user text-blue-500"></i>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-lg font-semibold text-gray-800"><%= fb.customer_name %></h3>
                                    <p class="text-sm text-gray-500">Verified Customer</p>
                                </div>
                            </div>
                            <p class="text-gray-600 italic">
                                "<%= fb.customer_feedback %>"
                            </p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- FAQ Section -->
        <div class="max-w-4xl mx-auto mb-8">
            <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">
                Frequently Asked Questions
            </h2>
            <div class="space-y-4">
                <% faqs.forEach((faq, index) => { %>
                    <div class="bg-white rounded-xl shadow-md overflow-hidden transition-all duration-300">
                        <button 
                            class="w-full px-6 py-4 text-left flex items-center justify-between hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" 
                            onclick="toggleFAQ(<%= index %>)"
                        >
                            <span class="font-semibold text-gray-800"><%= faq.question %></span>
                            <i id="faq-icon-<%= index %>" class="fas fa-chevron-down text-gray-400 transition-transform duration-300"></i>
                        </button>
                        <div id="faq-answer-<%= index %>" class="faq-answer hidden">
                            <div class="px-6 py-4 bg-gray-50">
                                <p class="text-gray-600">
                                    <%= faq.answer %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</main>

    
<%- include('includes/footer') %>

