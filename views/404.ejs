<%- include('includes/header') %>
    <div class="min-h-screen bg-gray-100 flex flex-col items-center justify-center px-4">
        <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-8 text-center">

            <!-- 404 Icon -->
            <div class="mx-auto h-32 w-32 bg-blue-100 rounded-full flex items-center justify-center mb-6">
                <i class="fas fa-exclamation-triangle text-blue-600 text-4xl"></i>
            </div>

            <!-- Title -->
            <h1 class="text-4xl font-bold text-gray-800 mb-4">404</h1>
            <h2 class="text-2xl font-semibold text-gray-700 mb-4">Page Not Found</h2>
            <% if (typeof error !=="undefined" && error) { %>
                <p class="text-gray-600 mb-8">
                    <%= error %>
                </p>
                <% } else { %>
                    <p class="text-gray-600 mb-8">Oops! It looks like the page you're looking for doesn't exist.</p>
                    <% } %>
                        <!-- Return Home Button -->
                        <div class="flex flex-col sm:flex-row justify-center gap-4">
                            <a href="/" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                                <i class="fas fa-home mr-2"></i>Go Home
                            </a>
                            <button onclick="history.back()" class="bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-700 transition-colors">
                                <i class="fas fa-arrow-left mr-2"></i>Go Back
                            </button>
                        </div>

                        <!-- Additional Text for Fun or Context -->
                        <p class="mt-6 text-sm text-gray-500">
                            Need assistance? <a href="contact" class="text-gray-500">Contact me</a> or explore our pharmacy management system.
                        </p>
        </div>
    </div>

    <%- include('includes/footer') %>